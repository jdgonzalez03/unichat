<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<StackPane styleClass="auth-container" stylesheets="@CSS/auth-style.css,@../CSS/colors.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="appmain.ui.Controllers.RequestViewController">

    <VBox alignment="CENTER" spacing="20" styleClass="auth-box">
        <Circle radius="30" styleClass="auth-logo" />
        <Text styleClass="auth-title" text="Invitaciones de grupo" />

        <VBox fx:id="requestListContainer" spacing="15" styleClass="form-container">
        </VBox>

        <HBox alignment="CENTER_LEFT" styleClass="back-container">
            <Button fx:id="backButtonRequest" styleClass="back-button" text="Volver">
                <graphic>
                    <Region styleClass="back-icon" />
                </graphic>
            </Button>
        </HBox>
    </VBox>
</StackPane>
